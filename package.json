{
  "name": "kwoka-spotify",
  "version": "0.6.3",
  "description": "",
  "type": "module",
  "scripts": {
    "deploy": "run-s build netlify:deploy",
    "serve": "netlify dev",
    "netlify": "vite build",
    "tsc": "tsc",
    "build": "vite build",
    "watch": "vite",
    "lint": "eslint --fix src; prettier --write src --loglevel error; eslint --fix api; prettier --write api --loglevel error",
    "netlify:deploy": "netlify deploy --prod",
    "upgrade": "ncu -u && pnpm i && pnpm build && git commit -S -am ':arrow_up: Dependencies' && pnpm version patch",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ekwoka/hotkeys": "1.0.1",
    "@ekwoka/preact-global-state": "2.0.0",
    "@ekwoka/spotify-api": "0.16.1",
    "@formkit/auto-animate": "1.0.0-pre-alpha.3",
    "@preact/signals": "1.2.1",
    "@tanstack/react-query": "4.33.0",
    "cookie": "0.5.0",
    "dotenv": "16.3.1",
    "faunadb": "4.8.0",
    "preact": "10.17.1",
    "preact-heroicons": "2.0.18",
    "preact-router": "4.1.2",
    "react-hot-toast": "2.4.1",
    "spotify-web-playback": "1.4.0"
  },
  "devDependencies": {
    "@netlify/functions": "2.0.2",
    "@preact/preset-vite": "2.5.0",
    "@tailwindcss/forms": "0.5.6",
    "@tailwindcss/typography": "0.5.10",
    "@types/cookie": "0.5.2",
    "@types/node": "20.6.0",
    "@types/spotify-api": "0.0.22",
    "@types/spotify-web-api-node": "5.0.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "autoprefixer": "10.4.15",
    "eslint": "8.49.0",
    "eslint-config-preact": "1.3.0",
    "eslint-plugin-filename-export": "1.0.4",
    "eslint-plugin-import": "2.28.1",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "pnpm": "8.7.5",
    "postcss": "8.4.29",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "react": "npm:preact@latest/compat",
    "react-dom": "npm:preact@latest/compat",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "vite": "4.4.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react"
      ]
    },
    "overrides": {
      "terser@>=5.0.0 <5.14.2": ">=5.14.2",
      "react@>=10": ">=10",
      "yaml@>=2.0.0-5 <2.2.2": ">=2.2.2"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-filename-export"
    ],
    "extends": [
      "preact",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended"
    ],
    "ignorePatterns": [
      "dist/"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "require-await": "error",
      "@typescript-eslint/ban-ts-comment": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "no-redeclare": "off",
      "@typescript-eslint/no-redeclare": [
        "error"
      ],
      "filename-export/match-named-export": "error"
    },
    "overrides": [
      {
        "files": [
          "./api/endpoints/*.ts"
        ],
        "rules": {
          "require-await": "off",
          "filename-export/match-named-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css,scss,less,graphql,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.cjs",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
