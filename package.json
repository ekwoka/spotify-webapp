{
  "name": "kwoka-spotify",
  "version": "0.6.2",
  "description": "",
  "type": "module",
  "scripts": {
    "deploy": "run-s build netlify:deploy",
    "serve": "run-p watch netlify:serve",
    "netlify": "run-s build:*",
    "tsc": "tsc",
    "build": "run-s tsc lint build:*",
    "build:js": "node scripts/esbuild.mjs",
    "build:css": "tailwindcss -i src/tailwind.pre.css -o dist/styles.css -m",
    "watch": "run-p watch:*",
    "watch:js": "NODE_ENV=development node scripts/esbuild.mjs",
    "watch:css": "tailwindcss -i src/tailwind.pre.css -o dist/styles.css -w",
    "lint": "eslint --fix src; prettier --write src --loglevel error; eslint --fix api; prettier --write api --loglevel error",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:serve": "netlify dev",
    "upgrade": "ncu -u && pnpm i && pnpm build && git commit -S -am ':arrow_up: Dependencies' && pnpm version patch",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ekwoka/hotkeys": "^1.0.1",
    "@ekwoka/preact-global-state": "^2.0.0",
    "@ekwoka/spotify-api": "^0.10.0",
    "@preact/signals": "^1.1.1",
    "cookie": "^0.5.0",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.3",
    "faunadb": "^4.7.0",
    "lint-staged": "^13.0.3",
    "preact": "^10.11.1",
    "preact-heroicons": "2.0.12",
    "preact-router": "^4.1.0",
    "spotify-web-playback": "^1.4.0"
  },
  "devDependencies": {
    "@netlify/functions": "^1.3.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/cookie": "^0.5.1",
    "@types/node": "^18.8.3",
    "@types/spotify-api": "^0.0.19",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "autoprefixer": "^10.4.12",
    "esbuild": "^0.15.10",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-plugin-clean": "^0.9.0",
    "esbuild-plugin-copy": "^1.3.0",
    "esbuild-plugin-filesize": "^0.3.0",
    "esbuild-plugin-import-glob": "^0.1.1",
    "eslint": "^8.25.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.13.3",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "react": "npm:preact@^10/compat",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react"
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "preact",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended"
    ],
    "ignorePatterns": [
      "dist/"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "require-await": "error",
      "@typescript-eslint/ban-ts-comment": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "no-redeclare": "off",
      "@typescript-eslint/no-redeclare": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          "./api/endpoints/*.ts"
        ],
        "rules": {
          "require-await": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css,scss,less,graphql,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.cjs",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
